doctype html
html
  head
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title= title
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
        script(src='/javascripts/login.js')
    body
        block content
            h1.centerfy Campus Connect
            .container#container
                //form.form-signin(action="/login", method="post")
                h2.form-signin-heading.centerfy Please sign in
                div#formHolder
                    div.input-group-lg#inputDiv
                        input.form-control.inputField(id="user", type="text", name="username", placeholder="Username: johndoe123")
                        input.form-control.inputField(id="pass", type="text", name="pass", placeholder="Password: abcd123!$*")
                    div#buttonDiv
                        button.btn.btn-large.btn-primary(id="signIn") Sign in
                        button.btn.btn-large.btn-primary(id="signUp") Sign Up
                    label.checkbox.
                        <input type="checkbox" value="remember-me" /> Remember me